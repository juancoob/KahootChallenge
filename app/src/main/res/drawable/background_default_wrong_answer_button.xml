<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/color_for_layer" android:bottom="0.5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/default_wrong_answer_background" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item
        android:id="@+id/shadow_layer"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_answer_background" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item
        android:id="@+id/main_color_layer"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/default_wrong_answer_background" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
