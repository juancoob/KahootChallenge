<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/choice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:fontFamily="@font/montserratbold"
        android:gravity="center"
        android:maxLines="2"
        android:paddingHorizontal="8dp"
        android:shadowColor="@color/shadow_answer_text"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/background_red_answer_button"
        tools:text="London" />

    <ImageView
        android:id="@+id/polygon_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_margin="8dp"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="@+id/choice"
        app:layout_constraintTop_toTopOf="@+id/choice"
        tools:src="@drawable/ic_triangle" />

    <ImageView
        android:id="@+id/left_choice_type"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:importantForAccessibility="no"
        android:paddingStart="18dp"
        android:paddingTop="18dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/choice"
        app:layout_constraintEnd_toStartOf="@+id/choice"
        app:layout_constraintStart_toStartOf="@+id/choice"
        app:layout_constraintTop_toTopOf="@+id/choice"
        tools:ignore="RtlSymmetry"
        tools:src="@drawable/ic_correct" />

    <ImageView
        android:id="@+id/right_choice_type"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:importantForAccessibility="no"
        android:paddingTop="18dp"
        android:paddingEnd="18dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/choice"
        app:layout_constraintEnd_toEndOf="@+id/choice"
        app:layout_constraintStart_toEndOf="@+id/choice"
        app:layout_constraintTop_toTopOf="@+id/choice"
        tools:ignore="RtlSymmetry"
        tools:src="@drawable/ic_correct" />

</androidx.constraintlayout.widget.ConstraintLayout>
